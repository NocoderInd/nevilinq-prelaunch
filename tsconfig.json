{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "incremental": true,
    "noEmit": true,

    /* ðŸ‘‡ make the @ alias point at apps/www */
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/www/*"]
    }
  }
}
